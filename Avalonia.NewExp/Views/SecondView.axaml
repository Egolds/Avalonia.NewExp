<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ac="using:Avalonia.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Avalonia.NewExp.Views.SecondView"
             xmlns:vm="using:Avalonia.NewExp.ViewModels"
             xmlns:ia="using:Avalonia.Xaml.Interactions.Animated"
             x:DataType="vm:SecondViewModel">

  <Design.DataContext>
    <vm:SecondViewModel/>
  </Design.DataContext>

  <Grid Background="White" RowDefinitions="Auto, *">
    <StackPanel>
      <TextBlock Text="{Binding Greeting}"/>

      <Button Content="Open new window" Command="{Binding OpenNewWindowCommand}" Margin="0,5" />
    </StackPanel>

    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden">
      <Interaction.Behaviors>
        <ia:VerticalScrollViewerAnimatedBehavior/>
      </Interaction.Behaviors>
      <ac:ItemsRepeater ItemsSource="{Binding TestItems}">
        <ac:ItemsRepeater.ItemTemplate>
          <DataTemplate>
            <Border Height="100" BoxShadow="5 5 5 5 Gray" Margin="5">
              <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
            </Border>
          </DataTemplate>
        </ac:ItemsRepeater.ItemTemplate>
      </ac:ItemsRepeater>
    </ScrollViewer>
    
  </Grid>

</UserControl>
